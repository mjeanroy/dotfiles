##
# Maven configuration.
##

# Maven aliases
alias mvnc='mvn clean'
alias mvni='mvn install'
alias mvnci='mvn clean install'
alias mvnt='mvn test'
alias mvnj='mvn jetty:run'
alias mvndebug='mvn -Xnoagent -Xrunjdwp:transport=dt_socket,server=y,address=4000,suspend=n'

# Maven settings
export M2_HOME="/opt/maven"
export M2=${M2_HOME}/bin
export MAVEN_OPTS="-Xms1024m -Xmx1024m"

# Add maven to path
export PATH=${M2}:${PATH}
